{
  "rules": {
	"nome": {
	  "minlength": 5,
	  "maxlength": 50,
	  "exp": "^[a-zA-Z' ]+$",
	  "expErr": "Caratteri ammessi: lettere alfabetiche, apostrofi e spazi (ma non da soli)"
	},
	"cognome": {
	  "minlength": 5,
	  "maxlength": 50,
	  "exp": "^[a-zA-Z' ]+$",
	  "expErr": "Caratteri ammessi: lettere alfabetiche, apostrofi e spazi (ma non da soli)"
	},
	"email": {
	  "minlength": 5,
	  "maxlength": 50,
	  "exp": "^[\\w\\.-]+@[\\w\\.-]+\\.\\w{2,4}$",
	  "expErr": "L'indirizzo E-Mail deve essere valido"
	},
	"password": {
	  "minlength": 6,
	  "maxlength": 16
	},
	"copassword": {
	  "minlength": 6,
	  "maxlength": 16,
	  "onlyClient": true,
	  "equals": "password",
	  "equalsErr": "deve essere uguale!"
	}
  }
}
