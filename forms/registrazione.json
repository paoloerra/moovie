{
  "rules": {
	"nome": {
	  "minlength": 2,
	  "maxlength": 50,
	  "exp": "^[a-zA-Z' àèéìòù]+$",
	  "expErr": "Caratteri ammessi: lettere (accentate), apostrofi e spazi (ma non da soli)"
	},
	"cognome": {
	  "minlength": 2,
	  "maxlength": 50,
	  "exp": "^[a-zA-Z' àèéìòù]+$",
	  "expErr": "Caratteri ammessi: lettere (accentate), apostrofi e spazi (ma non da soli)"
	},
	"email": {
	  "minlength": 5,
	  "maxlength": 50,
	  "exp": "^[\\w\\.-]+@[\\w\\.-]+\\.\\w{2,4}$",
	  "expErr": "Indirizzo non valido"
	},
	"password": {
	  "minlength": 6,
	  "maxlength": 16
	},
	"copassword": {
	  "minlength": 6,
	  "maxlength": 16,
	  "onlyClient": true,
	  "equals": "password",
	  "equalsErr": "Le password sono diverse"
	}
  }
}